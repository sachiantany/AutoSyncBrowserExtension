{
    "manifest_version": 3,
    "name": "AppSheet Sync",
    "version": "1.0.5",
    "description": "Automatically refreshes a Appsheet at a user-defined frequency",
    "permissions": ["activeTab","scripting","storage","webNavigation"],
    "action": {
         "default_popup": "popup.html",
         "default_icon": {
            "16": "sync.png",
            "32": "sync.png",
            "48": "sync.png",
            "128": "sync.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/*"
            ],
            "css": [
                "css/toastr.min.css",
                "css/contentStyle.css"
            ],
            "js": [
                "js/jquery.js",
                "js/toastr.min.js",
                "js/sweetalert.min.js",
                "js/simulate.min.js",
                "js/arrive.min.js",
                "js/contentScript.js"
            ],
            "all_frames": true,
            "run_at": "document_idle"
        }
    ],
    "host_permissions": [
        "https://www.appsheet.com/start/*"
    ]
  }
  